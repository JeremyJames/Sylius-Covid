{% if products|length == 2 %}
    {% set columns = "two" %}
{% endif %}
{% if products|length == 3 %}
    {% set columns = "three odd doubling" %}
{% endif %}
{% if products|length >= 4 %}
    {% set columns = "four" %}
{% endif %}

<div class="ui {{ columns|default('') }} cards">
    {% for product in products %}
        {% include '@SyliusShop/Product/_box.html.twig' %}
    {% endfor %}
</div>
